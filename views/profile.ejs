<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div class="shadow-lg p-3 mb-5 bg-white rounded">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" placeholder="Tell your story..." name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <!-- loop through post and grab base on ID, hard codes /post/ followed by insert of ID -->
        <% for(var i=0; i<posts.length; i++) {%>  
          <li class="col-6 justify-content-between mt-0 align-items-start  shadow p-3 mb-5 bg-white rounded">
            <strong>Title:</strong> <%= posts[i].title %> <br>
            <% 
            const dateString = new Date(posts[i].createdAt);
            const dateOnly = new Date(dateString).toISOString().split('T')[0]; %>
            <strong>Date:</strong> <%= dateOnly%>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid " src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>